{
  "extends": ["@tsconfig/node20/tsconfig.json"],
  "exclude": ["node_module", "build", "eslint.config.mjs"],
  "compilerOptions": {
    "outDir": "./build",
    "lib": ["es2023"],
    "module": "node16",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true
  }
}
